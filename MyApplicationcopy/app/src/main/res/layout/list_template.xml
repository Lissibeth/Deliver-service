<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
                android:text="TextView"
                android:layout_width="70dp"
                android:layout_margin="5dp"
                android:padding="2dp"
                android:layout_height="match_parent"  android:id="@+id/firm" android:layout_weight="1"/>
        <TextView
                android:text="TextView"
                android:layout_width="70dp"
                android:layout_margin="5dp"
                android:padding="2dp"
                android:layout_height="match_parent" android:id="@+id/goodType" android:layout_weight="1"/>
        <TextView
                android:text="TextView"
                android:layout_width="70dp"
                android:layout_margin="5dp"
                android:padding="2dp"
                android:layout_height="match_parent" android:id="@+id/sender" android:layout_weight="1"/>
        <TextView
                android:text="TextView"
                android:layout_width="70dp"
                android:layout_margin="5dp"
                android:padding="2dp"
                android:layout_height="match_parent" android:id="@+id/recipient"  android:layout_weight="1"/>
        <TextView
                android:text="TextView"
                android:layout_width="70dp"
                android:layout_margin="5dp"
                android:padding="2dp"
                android:layout_height="match_parent" android:id="@+id/price" android:layout_weight="1"/>
    </LinearLayout>